<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:background="@drawable/shape_white"
        android:backgroundTint="@color/pick_photo_cs"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/myir_icon_track_cs"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@drawable/shape_white"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_input_24" />

        <TextView
            android:id="@+id/myir_track_cs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/myir_icon_track_cs"
            android:fontFamily="@font/poppins_semibold"
            android:paddingTop="24dp"
            android:text="@string/minipack"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/myir_detail_sc"
            style="@style/SecondTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="#00000000"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="@string/input_detail_sc"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>