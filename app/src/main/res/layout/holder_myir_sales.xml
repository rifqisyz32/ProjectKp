<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_layout_sales"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sales_product_bg"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/shape_white"
            android:backgroundTint="@color/white"
            android:elevation="4dp"
            android:padding="8dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/input_MYIR_icon_sales"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/shape_white"
                android:padding="8dp"
                android:src="@drawable/ic_baseline_post_add_24" />

            <TextView
                android:id="@+id/input_MYIR_show_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/input_MYIR_icon_sales"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/product_speed"
                android:textColor="@color/sales_temp"
                android:textSize="20sp" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

