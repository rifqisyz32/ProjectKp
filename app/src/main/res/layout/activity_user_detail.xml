<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ctr_bg"
    tools:context=".UserDetail">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/user_detail_appbar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/user_detail_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ctr_bg"
            android:fitsSystemWindows="true"
            app:collapsedTitleGravity="center"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="Account">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/user_detail_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/User_detail_icon_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

                <Button
                    android:id="@+id/user_detail_arrow_back"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerInParent="true"
                    android:background="#00000000" />

            </RelativeLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_bg"
        android:paddingStart="32dp"
        android:paddingTop="16dp"
        android:paddingEnd="32dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/ic_baseline_brightness_1_64"
                android:elevation="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_baseline_edit_24" />

                <Button
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerInParent="true"
                    android:background="#00000000" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/user_detail_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="@string/fullname"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/user_detail_fullname_field"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/user_detail_fullname"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Fullname"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/user_detail_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/user_detail_fullname_field"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="@string/username"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/user_detail_username_field"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/user_detail_username"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Username"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/user_detail_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/user_detail_username_field"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="@string/email"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/user_detail_email_field"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/user_detail_email"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="username@gmail.com"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/user_detail_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/user_detail_email_field"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="@string/phone"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/user_detail_number_field"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/user_detail_number"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="082282875147"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/user_detail_logout"
                    style="@style/SecondTheme"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/user_detail_number_field"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="280dp"
                    android:background="@drawable/round_shape_white"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/logout"
                    android:textColor="#fff" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>