<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_layout_cs"
    android:background="@color/cs_layout_bg"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white"
            android:backgroundTint="@color/cs_rv_item"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:elevation="4dp"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="32dp"
            android:paddingBottom="16dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/product_icon_cs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white"
                android:backgroundTint="@color/cs_rv"
                android:padding="8dp"
                android:src="@drawable/ic_baseline_shopping_cart_cs_24"
                app:tint="@color/cs_rv_item"/>

            <TextView
                android:id="@+id/product_title_cs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/product_icon_cs"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/product_name"
                android:textColor="@color/cs_rv"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/product_price_cs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppins_light"
                android:textStyle="italic"
                android:text="@string/price"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/product_description_cs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_icon_cs"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="80dp"
                android:fontFamily="@font/poppins_light"
                android:text="@string/lorem"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/product_detail_cs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_icon_cs"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/detail"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>