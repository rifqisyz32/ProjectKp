<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".verification.EmailVerifyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/back_email_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="100dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_new_24"
            android:backgroundTint="@color/black" />

        <ImageView
            android:id="@+id/email_verify_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/back_email_verify"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_baseline_email_200"
            app:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/email_verify_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_verify_icon"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/verify_email"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/email_verify_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_verify_title"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@id/email_verify_username"
            android:fontFamily="@font/poppins_light"
            android:text="@string/hey"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/email_verify_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_verify_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/email_verify_username"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/username"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/email_verify_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_verify_welcome"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/email_verify_desc"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_verify_desc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:padding="8dp">

            <Button
                android:id="@+id/verify_email"
                style="@style/SecondTheme"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:layout_toEndOf="@+id/change_account"
                android:background="@drawable/round_shape_white"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/verify"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/change_account"
                style="@style/SecondTheme"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/button_stroke_red"
                android:elevation="0dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/change_acc"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toEndOf="@id/change_account">

                <ProgressBar
                    android:id="@+id/email_verify_prog"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_shape_white"
                    android:backgroundTint="@color/colorPrimary"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/white"
                    android:padding="8dp"
                    android:visibility="gone" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>