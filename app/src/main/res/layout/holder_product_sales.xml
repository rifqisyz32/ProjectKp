<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_shape_gr_red"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/product_icon_sales"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@drawable/round_shape_white"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_wifi_24" />

        <TextView
            android:id="@+id/products_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/product_icon_sales"
            android:fontFamily="@font/poppins_semibold"
            android:paddingTop="24dp"
            android:text="@string/minipack"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/product_description_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/products_sales"
            android:layout_toEndOf="@+id/product_icon_sales"
            android:fontFamily="@font/poppins_light"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:text="@string/lorem"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/product_detail_sales"
            style="@style/SecondTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="#00000000"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="@string/detail"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>