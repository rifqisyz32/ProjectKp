<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="CSTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_shape_user_profile_cs"
    tools:context=".CS.UserDetailCS">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/user_detail_appbar_cs"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/user_detail_collapsing_toolbar_cs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_shape_user_profile_cs"
            android:fitsSystemWindows="true"
            app:collapsedTitleGravity="start"
            app:contentScrim="@color/pick_photo_cs"
            app:elevation="0dp"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_photo_cs"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_baseline_account_circle_120"
                    android:padding="16dp"
                    app:elevation="16dp" />

                <RelativeLayout
                    android:id="@+id/update_img_cs"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/round_shape_gr_small"
                    android:backgroundTint="@color/white">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:elevation="16dp"
                        android:src="@drawable/ic_baseline_photo_camera_24"
                        app:tint="@color/pick_photo_cs" />

                    <Button
                        android:id="@+id/update_img_button_cs"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerInParent="true"
                        android:background="#00000000"
                        app:elevation="16dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/img_updated_cs"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_above="@+id/update_img_cs"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/round_shape_gr_small"
                    android:backgroundTint="@color/white"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_updated_bg_cs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:elevation="16dp"
                        android:src="@drawable/ic_baseline_check_24"
                        app:tint="@color/pick_photo_cs" />

                    <Button
                        android:id="@+id/img_updated_button_cs"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerInParent="true"
                        android:background="#00000000"
                        app:elevation="16dp" />

                    <ProgressBar
                        android:id="@+id/img_updated_prog_cs"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_centerInParent="true"
                        android:indeterminate="true"
                        android:indeterminateTint="@color/pick_photo_cs"
                        android:padding="8dp"
                        android:visibility="gone" />

                </RelativeLayout>

            </RelativeLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/user_detail_toolbar_cs"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/round_shape_user_profile_cs"
                app:elevation="0dp"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_new_24">

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/user_detail_layout_bg"
        android:paddingStart="32dp"
        android:paddingTop="32dp"
        android:paddingEnd="32dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/user_detail_fullname_cs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="@string/fullname"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/user_detail_fullname_field_cs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/user_detail_fullname_cs"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Fullname"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/user_detail_username_cs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/user_detail_fullname_field_cs"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="@string/username"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/user_detail_username_field_cs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/user_detail_username_cs"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Username"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/user_detail_email_cs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/user_detail_username_field_cs"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="@string/email"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/user_detail_email_field_cs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/user_detail_email_cs"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="username@gmail.com"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/user_detail_number_cs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/user_detail_email_field_cs"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="@string/phone"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/user_detail_number_field_cs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/user_detail_number_cs"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="0123456789"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/user_detail_logout_cs"
                    style="@style/SecondTheme"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/user_detail_number_field_cs"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="280dp"
                    android:background="@drawable/round_shape_gr"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/logout"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    app:backgroundTint="@color/button_temp"
                    app:elevation="8dp" />

            </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>