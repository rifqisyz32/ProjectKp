<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".verification.EmailVerify2Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="16dp">

        <ImageView
            android:id="@+id/email_verif_icon2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_baseline_check_circle_200"
            app:tint="#03DAC5" />

        <TextView
            android:id="@+id/email_verif_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_verif_icon2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/sent_verify_email"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/email_verif_desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_verif_title2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_light"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="@string/email_success_desc"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_verif_desc2"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:layout_marginTop="48dp">

            <Button
                android:id="@+id/reset_success_login"
                style="@style/SecondTheme"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/round_shape_white"
                android:fontFamily="@font/poppins_medium"
                android:layout_toEndOf="@+id/retry_verif"
                android:text="@string/login"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/retry_verif"
                style="@style/SecondTheme"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/button_stroke_red"
                android:elevation="0dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/retry"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toEndOf="@id/retry_verif"
                android:elevation="8dp">

                <ProgressBar
                    android:id="@+id/reset_success_prog"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_shape_white"
                    android:backgroundTint="@color/colorPrimary"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/white"
                    android:padding="8dp"
                    android:visibility="gone" />

            </RelativeLayout>

        </RelativeLayout>

