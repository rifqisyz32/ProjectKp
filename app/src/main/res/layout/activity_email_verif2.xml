<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgetpassword.ForgetActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="16dp">

        <ImageView
            android:id="@+id/email_verif_icon2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_baseline_check_circle_200"
            app:tint="@color/complete" />

        <TextView
            android:id="@+id/email_verif_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_verif_icon2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/sent_verify_email"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/email_verif_desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_verif_title2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="@string/email_success_desc"
            android:textAlignment="center"
            android:textColor="@color/colorSubtitle"
            android:textSize="14sp" />

        <Button
            android:id="@+id/reset_success_login"
            style="@style/SecondTheme"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/email_verif_desc2"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_shape_white"
            android:backgroundTint="@color/complete"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/continue_inside"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="16sp" />

    </RelativeLayout>

</ScrollView>