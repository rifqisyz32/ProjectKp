<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp">

            <ImageView
                android:id="@+id/reset_icon"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_baseline_check_circle_200"
                app:tint="@color/complete" />

            <TextView
                android:id="@+id/reset_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/reset_icon"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/reset_password"
                android:textSize="24sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/reset_success_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/reset_title"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/reset_success_desc"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textColor="@color/colorSubtitle"/>

            <Button
                style="@style/SecondTheme"
                android:id="@+id/reset_success_login"
                android:layout_below="@id/reset_success_desc"
                android:background="@drawable/round_shape_white"
                android:backgroundTint="@color/complete"
                android:layout_width="150dp"
                android:layout_height="42dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/login_again"
                android:textColor="#FFF"
                android:textSize="16sp" />

        </RelativeLayout>

</ScrollView>