<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_layout_sales"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sales_product_bg"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/shape_white"
            android:backgroundTint="@color/white"
            android:elevation="4dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/product_speed_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/product_title_sales"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/product_speed"
                android:textColor="@color/sales_temp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/product_title_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_light"
                android:text="@string/product_title"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/product_device_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_speed_sales"
                android:layout_alignTop="@id/product_price_sales"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="80dp"
                android:fontFamily="@font/poppins_light"
                android:text="@string/product_device"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/product_price_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_speed_sales"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/product_price"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>